{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["src/*"],
      "_shared/*": ["src/_shared/*"],
      "@ant-design/icons/lib/dist$/*": ["src/_shared/antd/icons/*"]
    },
    "outDir": "./dist",
    "lib": ["DOM", "es2017"],
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    //"useDefineForClassFields": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./dist/**/*",
  ]
}
